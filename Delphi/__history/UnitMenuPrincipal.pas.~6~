  FireDAC.Comp.DataSet, FireDAC.Comp.Client, System.Actions, Vcl.ActnList,
  Vcl.RibbonLunaStyleActnCtrls;

type
  TFrmMenuPrincipal = class(TForm)
    ActionManager1: TActionManager;
    Action2: TAction;
